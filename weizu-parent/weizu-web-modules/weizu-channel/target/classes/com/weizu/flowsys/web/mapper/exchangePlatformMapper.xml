  <!-- 平台列表记录数 -->
  <select id="countEp" parameterType="map" resultType="java.lang.Integer">
   		select count(*)
   		 from <include refid="t_ep"></include> 
   		<!-- 前提条件 -->
   		 <where>
  		 		<include refid="condition_sql"></include>
   		 </where>
  </select>
