   	<sql id="condition_sql">
   		<if test="epName != null">
   			AND ep_name like CONCAT('%', TRIM(#{epName}), '%')
   		</if>
   		<if test="epNameEqual != null">
   			AND ep_name = #{epNameEqual}
   		</if>
   		<if test="epEngId != null">
